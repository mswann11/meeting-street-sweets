<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_land"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/bottom_circle"
            android:layout_marginLeft="@dimen/circle_start"
            android:layout_marginRight="@dimen/bottom_circle"
            android:layout_marginStart="@dimen/circle_start"
            android:background="@drawable/circle_light"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_circle"
            android:paddingRight="@dimen/padding_circle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_circle"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/large_text"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/address"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_circle"
                android:autoLink="phone"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/info"
            android:layout_toRightOf="@id/info"
            android:orientation="vertical">

            <Button
                style="@style/button_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about" />

            <Button
                style="@style/button_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hours" />

            <Button
                style="@style/button_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>